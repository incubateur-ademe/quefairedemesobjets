{
  "manifest_version": 3,
  "name": "QFDMO Inspector",
  "description": "Detecte et analyse les iframes Que Faire De Mes Objets / Dechets sur les pages web",
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": {
      "32": "icon-32.png"
    }
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/pages/content/index.tsx"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon-128.png", "icon-32.png"],
      "matches": []
    }
  ]
}
