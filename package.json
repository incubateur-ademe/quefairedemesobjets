    "devDependencies": {
        "@types/jest": "^29.5.4",
        "jest": "^29.6.4",
        "jest-environment-jsdom": "^29.6.4",
        "parcel": "^2.8.3",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2",
        "ts-node": "^10.9.1"
    }
