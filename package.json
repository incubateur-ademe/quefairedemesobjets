{
    "scripts": {
        "build": "parcel build",
        "eslint": "eslint . --fix",
        "lint-check": "prettier --check static/to_compile",
        "lint": "prettier static/to_compile --write",
        "test": "jest",
        "watch": "parcel watch"
    },
    "source": [
        "static/to_compile/entrypoints/qfdmo.css",
        "static/to_compile/entrypoints/qfdmo.ts",
        "static/to_compile/entrypoints/iframe_resizer.ts",
        "static/to_compile/entrypoints/iframe.ts",
        "static/to_compile/entrypoints/admin-map-widget.ts"
    ],
    "targets": {
        "default": {
            "distDir": "./static/compiled"
        }
    },
    "browserslist": [
        "defaults", "iOS 14"
    ],
    "@parcel/transformer-css": {
        "errorRecovery": true
    },
    "prettier": {
        "trailingComma": "all",
        "printWidth": 88,
        "tabWidth": 4,
        "semi": false,
        "overrides": [
            {
                "files": "*yml",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "dependencies": {
        "@gouvfr/dsfr": "^1.11",
        "@hotwired/stimulus": "^3.2.1",
        "@hotwired/turbo": "^8.0.4",
        "bowser": "^2.11.0",
        "iframe-resizer": "^4.3.9",
        "leaflet": "^1.9.4",
        "leaflet-extra-markers": "^1.2.2",
        "posthog-js": "^1.120.2",
        "tailwindcss": "^3.4.3"
    },
    "devDependencies": {
        "@playwright/test": "^1.43.0",
        "@testing-library/jest-dom": "^6.4.2",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.7",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "buffer": "^6.0.3",
        "eslint": "^8.57.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^17.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "parcel": "^2.12.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.4"
    }
}
