{
    "scripts": {
        "build": "parcel build",
        "watch": "parcel watch",
        "lint-check": "prettier --check static/to_compile",
        "lint": "prettier static/to_compile --write"
    },
    "source": [
        "static/to_compile/entrypoints/qfdmo.css",
        "static/to_compile/entrypoints/qfdmo.ts"
    ],
    "targets": {
        "default": {
            "distDir": "./static/compiled"
        }
    },
    "@parcel/transformer-css": {
        "errorRecovery": true
    },
    "prettier": {
        "trailingComma": "all",
        "printWidth": 88,
        "tabWidth": 4,
        "semi": false,
        "overrides": [
            {
                "files": "*yml",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    },
    "dependencies": {
        "@gouvfr/dsfr": "^1.10",
        "@hotwired/stimulus": "^3.2.1",
        "leaflet": "^1.9.4",
        "leaflet-extra-markers": "^1.2.2",
        "tailwindcss": "^3.3.1"
    },
    "devDependencies": {
        "parcel": "^2.8.3",
        "prettier": "^3.0.2"
    }
}
